{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "@xtory/shared": ["./packages/shared/src"],
      "@xtory/shared/*": ["./packages/shared/src/*"],
      "@xtory/main": ["./packages/main/src"],
      "@xtory/main/*": ["./packages/main/src/*"],
      "@xtory/renderer": ["./packages/renderer/src"],
      "@xtory/renderer/*": ["./packages/renderer/src/*"],
      "shared/*": ["./packages/shared/src/*"],
      "main/*": ["./packages/main/src/*"],
      "renderer/*": ["./packages/renderer/src/*"]
    }
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
